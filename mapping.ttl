@prefix activity: <http://example.com/activity/> .
@prefix ex:       <http://example.com/> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/> .
@prefix ql:       <http://semweb.mmlab.be/ns/ql#> .
@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rml:      <http://semweb.mmlab.be/ns/rml#> .
@prefix rmls:     <http://semweb.mmlab.be/ns/rmls#> .
@prefix rr:       <http://www.w3.org/ns/r2rml#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/base/TriplesMap1>
        rdf:type               rr:TriplesMap ;
        rml:logicalSource      [ rml:iterator              "$.countries[*]" ;
                                 rml:referenceFormulation  ql:JSONPath ;
                                 rml:source                [ rdf:type      rmls:KafkaStream ;
                                                             rmls:broker   "localhost:9092" ;
                                                             rmls:groupId  "group1" ;
                                                             rmls:topic    "epicTopic"
                                                           ]
                               ] ;
        rr:predicateObjectMap  [ rr:objectMap  [ rml:reference  "Name" ] ;
                                 rr:predicate  ex:name
                               ] ;
        rr:subjectMap          [ rr:template  "http://example.com/{Country Code}/{Name}" ] .
